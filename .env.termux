# OpenCode Manager - Termux Configuration
# Optimized settings for running in Termux environment

# ============================================
# Backend Server Configuration
# ============================================
PORT=5001
# Use 127.0.0.1 for local-only access, or 0.0.0.0 to allow network access
HOST=127.0.0.1
CORS_ORIGIN=http://127.0.0.1:5173
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# OpenCode Server
# ============================================
OPENCODE_SERVER_PORT=5551
OPENCODE_HOST=127.0.0.1

# ============================================
# Database
# ============================================
# Using relative path for Termux compatibility
DATABASE_PATH=./data/opencode.db

# ============================================
# Workspace Configuration
# ============================================
# Using relative path for Termux compatibility
WORKSPACE_PATH=./workspace

# ============================================
# Timeouts (milliseconds)
# ============================================
# Increased timeouts for potentially slower mobile devices
PROCESS_START_WAIT_MS=3000
PROCESS_VERIFY_WAIT_MS=1500
HEALTH_CHECK_INTERVAL_MS=10000
HEALTH_CHECK_TIMEOUT_MS=60000

# ============================================
# File Limits (MB)
# ============================================
# Reduced limits for mobile storage constraints
MAX_FILE_SIZE_MB=20
MAX_UPLOAD_SIZE_MB=20

# ============================================
# Logging
# ============================================
DEBUG=false

# ============================================
# Frontend Configuration (Vite)
# ============================================
VITE_API_URL=http://127.0.0.1:5001
VITE_SERVER_PORT=5001
VITE_OPENCODE_PORT=5551
VITE_MAX_FILE_SIZE_MB=20
VITE_MAX_UPLOAD_SIZE_MB=20

# ============================================
# Termux-Specific Notes
# ============================================
# - Use relative paths instead of absolute paths
# - HOST=127.0.0.1 for local-only access (recommended)
# - HOST=0.0.0.0 to allow access from other devices on network
# - Reduced file size limits to account for mobile storage
# - Increased timeouts for potentially slower mobile performance
# - Frontend runs on port 5173 by default (Vite)
